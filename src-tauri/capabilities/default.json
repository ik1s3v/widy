{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": [
		"main"
	],
	"permissions": [
		{
			"identifier": "opener:allow-open-url",
			"allow": [
				{
					"url": "https://www.twitch.tv/activate?device-code=*"
				},
				{
					"url": "http://localhost:3000/create-donation-account?nonce=*"
				},
				{
					"url": "https://widy.fun/create-donation-account?nonce=*"
				}
			]
		},
		"websocket:default",
		"global-shortcut:allow-is-registered",
		"global-shortcut:allow-register",
		"global-shortcut:allow-unregister",
		"core:default",
		"fs:allow-applocaldata-read-recursive",
		"fs:allow-applocaldata-write-recursive",
		"fs:allow-applocaldata-meta-recursive",
		"fs:scope-applocaldata-recursive",
		"dialog:default",
		"log:default",
		"deep-link:default"
	]
}